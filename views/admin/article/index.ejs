<a href="article/create" class="btn btn-primary">创建</a>
<br/>
<br/>
<table class="table table-hover">
    <tbody>
    <tr>

        <th>名称</th>
        <th>图片</th>
        <th>操作</th>
    </tr>
    <% data.forEach(function(item){ %>
    <tr>

        <td><a href="/admin/article"><%= item.name %></a></td>
        <td><img src="<%= item.image||defaultImg %>" class="thumbnail" height="80"/></td>

        <td>
            <div class="btn-group"><a href="/admin/article/update?id=<%= item._id %>"
                                      class="btn btn-xs btn-primary">更改</a><a
                        href="/admin/article/delete?id=<%= item._id %>"
                        class="btn btn-xs btn-success delete_item">删除</a></div>
        </td>
    </tr>
    <% }) %>

    </tbody>
</table>



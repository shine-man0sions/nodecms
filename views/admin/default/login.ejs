<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">用户登录</h3>
                </div>
                <div class="panel-body">
                    <% if(error){%>
                    <div class="alert alert-danger"><%= error %></div>
                    <%}%>
                    <form role="form" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" autofocus="" type="email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="passwd" value=""
                                       type="password">
                            </div>
                            <div class="checkbox hide">
                                <label>
                                    <input name="remember" value="Remember Me" type="checkbox">Remember Me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Login">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






